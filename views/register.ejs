<%- include('partials/header') %>

<main class="max-w-md mx-auto px-4 py-16">
  <h2 class="text-2xl font-semibold text-slate-800 mb-2 text-center">Register</h2>
  <p class="text-sm text-slate-600 mb-6 text-center">Sign up with Google or create a local account</p>

  <div class="bg-white border border-gray-100 rounded-lg p-6 shadow-sm">
    <a href="/auth/google" class="w-full inline-flex items-center justify-center gap-3 px-4 py-3 rounded-md border border-gray-200 text-slate-700 hover:bg-gray-50 transition duration-150">
      <img class="w-5 h-5" src="https://www.svgrepo.com/show/475656/google-color.svg" loading="lazy" alt="Google logo">
      <span class="font-medium">Continue with Google</span>
    </a>

    <div class="flex items-center my-4">
      <div class="flex-1 h-px bg-gray-100"></div>
      <div class="px-3 text-xs text-slate-400">or</div>
      <div class="flex-1 h-px bg-gray-100"></div>
    </div>

    <form action="/register" method="POST" class="space-y-4">
      <div>
        <label class="block text-sm text-slate-600 mb-1">Email</label>
        <input type="email" name="username" required class="w-full px-3 py-2 border border-gray-200 rounded-md focus:outline-none focus:ring-1 focus:ring-slate-300" />
      </div>

      <div>
        <label class="block text-sm text-slate-600 mb-1">Password</label>
        <input type="password" name="password" required class="w-full px-3 py-2 border border-gray-200 rounded-md focus:outline-none focus:ring-1 focus:ring-slate-300" />
      </div>

      <div>
        <button type="submit" class="w-full inline-flex justify-center px-4 py-2 rounded-md bg-slate-700 text-white hover:bg-slate-800 transition duration-150">Register</button>
      </div>
    </form>
  </div>
</main>

<%- include('partials/footer') %>
