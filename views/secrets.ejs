<%- include('partials/header') %>

  <main class="max-w-3xl mx-auto px-4 py-16 text-center">
    <i class="fas fa-key text-6xl text-slate-600 mb-6"></i>
    <h2 class="text-2xl font-semibold text-slate-800 mb-3">You've Discovered My Secret!</h2>
    <% secret.forEach(function(secret) { %>
    <div class="mx-auto max-w-2xl bg-white border border-gray-100 rounded-lg p-6 shadow-md mb-4">
      <p class="text-slate-700 text-lg"> <%= secret.secret %> </p>
    </div>
    <% }); %>

    <div class="flex justify-center gap-3 mt-6">
      <a href="/logout" class="px-4 py-2 rounded-md border border-gray-200 text-slate-700 hover:bg-gray-50 transition">Log Out</a>
      <a href="/submit" class="px-4 py-2 rounded-md bg-slate-700 text-white hover:bg-slate-800 transition">Submit a Secret</a>
    </div>
  </main>

  <%- include('partials/footer') %>