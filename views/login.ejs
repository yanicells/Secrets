<%- include('partials/header') %>

  <main class="max-w-3xl mx-auto px-4 py-12">
    <h2 class="text-2xl font-semibold text-slate-800 mb-6">Login</h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="md:col-span-2 bg-white border border-gray-100 rounded-lg p-6 shadow-sm">
        <form action="/login" method="POST" class="space-y-4">
          <div>
            <label class="block text-sm text-slate-600 mb-1">Email</label>
            <input type="email" name="username" class="w-full px-3 py-2 border border-gray-200 rounded-md focus:outline-none focus:ring-1 focus:ring-slate-300" />
          </div>
          <div>
            <label class="block text-sm text-slate-600 mb-1">Password</label>
            <input type="password" name="password" class="w-full px-3 py-2 border border-gray-200 rounded-md focus:outline-none focus:ring-1 focus:ring-slate-300" />
          </div>
          <div>
            <button type="submit" class="w-full inline-flex justify-center px-4 py-2 rounded-md bg-slate-700 text-white hover:bg-slate-800 transition">Login</button>
          </div>
        </form>
      </div>

      <aside class="bg-white border border-gray-100 rounded-lg p-6 flex items-center justify-center">
        <a href="/auth/google" class="inline-flex items-center gap-2 px-4 py-2 rounded-md border border-gray-200 text-slate-700 hover:bg-gray-50 transition">
          <i class="fab fa-google"></i>
          Sign In with Google
        </a>
      </aside>
    </div>
  </main>

  <%- include('partials/footer') %>